  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}

.jobs-page_image-container {
  width: 150px;
}
.jobs-page_image {
  transform: translateX(-200px);
}

.jobs-page_inner-columns ul {
  column-count: 2;
}

.sl-bewerben_button {
  margin-top: 50px;
}

