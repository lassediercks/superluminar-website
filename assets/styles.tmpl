:root {
  --sl-grape: #211d2b;
  --sl-grey: #393f4d;
  --sl-pidgeon: #7a8390;
  --sl-grape--light: #4a303d;
  --sl-overlay-background: rgba(0, 0, 0, 0.3);
  --sl-purple: #ed486a;
  --sl-teal: #03feb7;
  --sl-font-headline: "Space Mono";
  --sl-font-default: "Raleway", sans-serif;
  --sl-font-weight-regular: 400;
  --sl-font-weight-semibold: 600;
  --sl-font-weight-medium: 500;

  --sl-max-width: 984px;
}

*,
*:after,
*:before {
  box-sizing: border-box;
}

body {
  margin: 0;
  padding: 0;
  font-family: var(--sl-font-default);
  font-size: 18px;
  color: white;
  background: var(--sl-grape);
  background-image: radial-gradient(#23202b, #2e191f);
  max-height: 100vh;
  overflow: auto;
  scroll-snap-type: y mandatory;
}

body:after {
  content: " ";
  background-image: url("{{ .Site.BaseURL }}/img/bg_tile.png");
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  top: 0;
}

.stage {
  position: relative;
  z-index: 6;
  scroll-snap-align: start;
  height: 100vh;
}

/* Header */

.active .navItem-text {
  padding: 0.2em 0;
  border-bottom: 2px solid var(--sl-purple);
}

.sl-header {
  position: relative;
  padding: 15px 32px;
  box-sizing: content-box;
  z-index: 10;
  max-width: var(--sl-max-width);
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  scroll-snap-align: start;
  scroll-snap-points-y: repeat(100vh);
}

.sl-header_input {
  visibility: hidden;
  opacity: 0;
}

.sl-header_input:checked ~ .sl-header-nav {
  visibility: visible;
  opacity: 1;
}
.sl-header_toggle path {
  transition: opacity 110ms ease-out, transform 110ms ease-out,
    stroke 130ms ease-out, transform-origin 110ms ease-out;
}

.sl-header_input:checked ~ .sl-header_toggle .menu_icon-upper-stroke {
  transform: rotate(-29deg) translateY(8px) translateX(3px);
  stroke: var(--sl-teal);
  transform-origin: 50%;
}

.sl-header_input:checked ~ .sl-header_toggle .menu_icon-middle-stroke {
  opacity: 0;
}

.sl-header_input:checked ~ .sl-header_toggle .menu_icon-lower-stroke {
  transform: rotate(29deg) translateX(-9px);
  transform-origin: 50%;
  stroke: var(--sl-teal);
}

.sl-header_input:checked ~ .sl-header-nav .sl-navigation-item {
  animation: item-appear 170ms ease-in-out 1 50ms;
  animation-fill-mode: forwards;
}

.sl-header_toggle {
  display: none;
}

.sl-navigation-item {
  padding: 15px;
  margin: 0 10px;
  color: white;
  text-decoration: none;
  border-bottom: 2px solid transparent;
  border-top: 2px solid transparent;
}

.sl-header-nav {
  transition: 170ms ease-in-out opacity;
}

@keyframes item-appear {
  0% {
    transform: translateY(-20px);
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

@media (max-width: 860px) {
  .sl-header-nav {
    text-transform: uppercase;
    font-size: 20px;
    font-family: var(--sl-font-headline);
    display: flex;
    position: fixed;
    background: rgba(0, 0, 0, 0.9);
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100vh;
    bottom: 0;
    top: 0;
    left: 0;
    right: 0;
    visibility: hidden;
    opacity: 0;
  }
  .sl-navigation-item {
    opacity: 0;
    display: inline-block;
  }
  .sl-header_toggle {
    display: block;
    position: relative;
    z-index: 11;
  }
}

/* Home */

.home-area {
  display: grid;
  grid-template-columns: 350px auto;
  margin: 0 auto;
  align-items: center;
  max-width: var(--sl-max-width);
  padding: 0 32px;
}

.home-area--tools {
  grid-template-columns: auto 350px;
}
@media (max-width: 860px) {
  .home-area {
    grid-template-columns: auto;
  }
  .sl-toolbox {
    grid-row: 1;
    height: 400px;
  }
  .sl-toolbox img {
    height: 100%;
  }
}

.home-text {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
}

/* Astronauts */

@keyframes float {
  50% {
    transform: translateY(-100px);
  }
}

.sl-astronauts {
  height: 100px;
  position: relative;
}
.sl-astronaut-green {
  animation: float 13s ease-in-out infinite;
  position: absolute;
  left: 30px;
  top: 90px;
}
.sl-astronaut-red {
  animation: float 15s ease-in-out infinite;
  position: absolute;
  right: 63px;
  top: -80px;
}

@media (max-width: 860px) {
  @keyframes float {
    50% {
      transform: translateY(-20px);
    }
  }
  .home-area {
    padding: 200px 32px;
    grid-template-columns: auto;
    grid-template-rows: auto auto;
    align-content: flex-start;
    align-items: stretch;
    height: 90vh;
  }
  .sl-astronauts {
    max-width: 320px;
  }
  .sl-astronaut-green {
    left: 0;
    bottom: 0;
    top: initial;
  }
  .sl-astronaut-red {
    right: 0;
    top: initial;
    bottom: 0;
  }
}
/* Meteor */

.sl-meteors img {
